.player-cards-item
  position: relative
  display: inline-block
  overflow: hidden
  height: 30px
  width: 20px
  background: darken($brand-primary, 10%)
  border: 3px solid darken($brand-primary, 50%)
  border-radius: 5px
  margin: 0 5px 5px 0

  .player-cards-item-image
    width: 20px

  .player-cards-item-close-btn
  .player-cards-item-buy-btn
  .player-cards-item-use-btn
    display: none

  &.is-expanded

    position: absolute
    top: 10px
    left: 10px
    height: 420px
    width: 300px
    border-radius: 20px
    z-index: $z-modal

    .player-cards-item-image
      width: 300px

    .player-cards-item-close-btn
    .player-cards-item-buy-btn
    .player-cards-item-use-btn
      display: block
      position: absolute

    .player-cards-item-close-btn
      top: 10px
      right: 10px

    .player-cards-item-buy-btn
    .player-cards-item-use-btn
      bottom: 10px
      right: 10px





