.game

  .start-turn
  .roll-dice
  .resolve-dice
  .buy-cards
  .end-turn
    display: none

  &.start-turn
    .start-turn
      display: block

  &.roll-dice
    .roll-dice
      display: block

  &.resolve-dice
    .resolve-dice
      display: block

  &.buy-cards
    .buy-cards
      display: block

  &.end-turn
    .end-turn
      display: block
